<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#5096F5"/>
            <gradient
                android:angle="270"
                android:endColor="#5096F5"
                android:startColor="#50BDF5" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#5E98EE"/>
            <gradient
                android:angle="90"
                android:endColor="#5096F5"
                android:startColor="#50BDF5" />
        </shape>
    </item>
</selector>