<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.luffy.generalviewlib.customView.tag.TagView
        android:id="@+id/tag_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="#FFFFFF"
        app:tcvBackground="@drawable/shape_trainlist_rounded_corners"
        app:tcvBorder="5dp"
        app:tcvCanTagClick="false"
        app:tcvItemBorderHorizontal="0dp"
        app:tcvItemBorderVertical="6dp"
        app:tcvSingleLine="false"
        app:tcvTextColor="#5096F5"
        app:tcvTextSize="9" />

</android.support.constraint.ConstraintLayout>
