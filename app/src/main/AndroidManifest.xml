<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luffy.generalview">

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.radarScanRandomText.RadarScanViewRandomTextActivity"></activity>
        <!-- 主界面 -->
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 转动控件 -->
        <activity android:name=".ui.wheel.WheelViewActivity" /> <!-- 消息轮动 -->
        <activity android:name=".ui.flipper.GeneralFlipperActivity" /> <!-- 空布局 -->
        <activity android:name=".ui.empty.GeneralEmptyActivity" /> <!-- 标签 -->
        <activity android:name=".ui.tag.GeneralTagActivity" /> <!-- 星级评分 -->
        <activity android:name=".ui.ratingBar.GeneralRatingBarActivity" /> <!-- 播放中控件 -->
        <activity android:name=".ui.playingIcon.PlayingIconActivity" /> <!-- 底部栏 -->
        <activity android:name=".ui.bottombar.BottomBarActivity" />
        <activity android:name=".ui.bottombar.ViewPagerActivity" />
        <activity android:name=".ui.bottombar.WithoutViewPagerActivity" /> <!-- 文本编辑器 -->
        <activity android:name=".ui.textIndicator.TextIndicatorActivity" /> <!-- spinner -->
        <activity android:name=".ui.spinner.SpinnerActivity" />
    </application>

</manifest>