<?xml version="1.0" encoding="utf-8"?><!--消息通知条-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flipper_root"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/flipper_left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:scaleType="center"
        android:src="@drawable/general_flipper_default"
        tools:ignore="ContentDescription" />

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:autoStart="true"
        android:flipInterval="3000"
        android:inAnimation="@anim/flipper_in"
        android:outAnimation="@anim/flipper_out" />

    <ImageView
        android:id="@+id/flipper_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/general_flipper_default"
        tools:ignore="ContentDescription" />

</LinearLayout>